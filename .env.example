# Telegram review bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Threads publish bridge (reuse existing publish.js)
THREADS_PUBLISH_JS=/home/ubuntu/threads-bot/publish.js
# news2 계정 핸들(@ 제외) - publish 검증 프로필 대상
NEWS_THREADS_OWN_HANDLE=
NEWS_THREADS_CDP_URL=http://127.0.0.1:9223/

# RSS
RSS_FEEDS=https://news.google.com/rss/search?q=AI,https://news.google.com/rss/search?q=python
NEWS_INCLUDE_KEYWORDS=ai,인공지능,python,automation,자동화
NEWS_EXCLUDE_KEYWORDS=광고,이벤트

# 벤치마크 스타일 참고 계정(@ 제외, 콤마구분)
STYLE_BENCHMARK_ACCOUNTS=joo___wol2,info__sum

# Generation provider: openai | anthropic | gemini
GEN_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemma-3-27b-it

# Draft constraints
DRAFT_MAX_CHARS=250
DRAFT_LIMIT=10
HOT_ONLY=1
HOT_TOP_N=10
HOT_MIN_SCORE=35

# Article extraction minimum text length
ARTICLE_MIN_TEXT_LEN=120

# Scheduling
PUBLISH_SLOTS=10:30,13:30,18:30
DAILY_PUBLISH_LIMIT=2

# 뉴스 사이 잡담 삽입
MIX_CHAT_ENABLED=1
MIX_CHAT_EVERY=3
